{
  "general": {
    "description": "index des versements de versement de Baillet",
    "label": "Versements",
    "indexName": "versements"
  },
  "connector": {
    "type": "document",
    "dirPath": "D:\\ATD_Baillet\\versements2018"
  },
  "schema": {
    "contentField": "attachment.content",
    "analyzer": "lowercase_asciifolding",
    "mappings": {
      "versements": {
        "properties": {
          "attachment.author": {
            "type": "text",
            "index": false
          },
          "attachment.title": {
            "type": "text",
            "index": false
          },
          "attachment.date": {
            "type": "date",
            "index": false
          },
          "attachment.language": {
            "type": "keyword",
            "index": false
          },
          "title": {
            "type": "text",
            "index": false
          }
        }
      }
    }
  },
  "display": [
    {
      "Arko_refUnique": {
        "cssClass": "excerpt"
      }
    },

    {
      "Arko_intitule": {
        "cssClass": "excerpt"
      }
    },
    {
      "Arko_annee_debut": {
        "cssClass": "excerpt"
      }
    },

    {
      "Arko_annee_fin": {
        "cssClass": "excerpt"
      }
    },
    {
      "Arko_producteur": {
        "cssClass": "excerpt"
      }
    }
  ],
  "thesauri": {
    "thesaurus_unesco": {
      "name": "thesaurus_unesco",
      "skosXmlPath": "D:\\\\NLP\\\\unescothes.rdf",
      "highlightFields": [
        "attachment.content"
      ],
      "extractedLangages": "en,fr,es",
      "outputLangage": "fr"
    }
  },
  "indexation": {
    "elasticUrl": "http://localhost:9200/",
    "deleteOldIndex": "yes",
    "applythesauri": "yes"
  }
}